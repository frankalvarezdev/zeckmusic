---
import '../styles/main.css'

export interface Props {
    title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='es'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='generator' content={Astro.generator} />
        <title>{title}</title>
        <link rel='preconnect' href='https://fonts.googleapis.com' />
        <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
        <link
            href='https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap'
            rel='stylesheet'
        />
        <link
            href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css'
            rel='stylesheet'
        />
    </head>
    <body>
        <div class='navbar bg-backgroundPrimary shadow-none max-md:hidden'>
            <div class='navbar-start'>
                <a class='navbar-item font-extrabold'>ZECK MUSIC</a>
            </div>
            <div class='navbar-center'>
                <a class='navbar-item navbar-active'>Mainstage</a>
                <a class='navbar-item'>Releases</a>
                <a class='navbar-item'>Contacto</a>
            </div>
            <div class='navbar-end'>
                <a class='navbar-item'> </a>
            </div>
        </div>

        <div class='navbar rounded-lg bg-backgroundPrimary md:hidden'>
            <div class='navbar-start'>
                <a class='navbar-item'> ZECK MUSIC</a>
            </div>
            <div class='navbar-end'>
                <div class='dropdown-container'>
                    <div class='dropdown'>
                        <label
                            class='btn btn-solid-primary flex cursor-pointer px-4'
                            tabindex='0'
                        >
                            <i class='bx bx-menu'></i>
                        </label>

                        <div
                            class='dropdown-menu dropdown-menu-bottom-left bg-backgroundPrimary'
                        >
                            <a class='dropdown-item text-sm'> Mainstage</a>
                            <a tabindex='-1' class='dropdown-item text-sm'>
                                Releases
                            </a>
                            <a tabindex='-1' class='dropdown-item text-sm'>
                                Contacto
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <slot />
    </body>
</html>
